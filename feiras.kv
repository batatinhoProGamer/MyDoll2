                            background_color: 1, 36/255, 148/255, 1
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            text: "Coloque as vendas da feira"
                            bold: True
                        BoxLayout:
                            size_hint_y: 0.70
                            ScrollView:
                                bar_color: 0, 0, 0, 0
